# -*- mode: ruby -*-
# vim: set ft=ruby :

MACHINES = {
  :otuslinux => {
        :box_name => "centos/7",
        :ip_addr => '192.168.11.101',
	:disks => {
		:sata1 => {
			:dfile => './sata1.vdi',
			:size => 100,
			:port => 1
		}
	}

		
  },
}

Vagrant.configure("2") do |config|
#  config.vm.synced_folder '.', '/vagrant', disabled: true
  MACHINES.each do |boxname, boxconfig|

      config.vm.define boxname do |box|

          box.vm.box = boxconfig[:box_name]
          box.vm.host_name = boxname.to_s

#          box.vm.network "forwarded_port", guest: 3260, host: 3260+offset

          box.vm.network "private_network", ip: boxconfig[:ip_addr]

          box.vm.provider :virtualbox do |vb|
                  # for boot messages
            	  # vb.gui = true
                  vb.customize ["modifyvm", :id, "--memory", "1024"]
                  needsController = false
		  boxconfig[:disks].each do |dname, dconf|
			  unless File.exist?(dconf[:dfile])
				vb.customize ['createhd', '--filename', dconf[:dfile], '--variant', 'Fixed', '--size', dconf[:size]]
                                needsController =  true
                          end

		  end
                  if needsController == true
                     vb.customize ["storagectl", :id, "--name", "SATA", "--add", "sata" ]
                     boxconfig[:disks].each do |dname, dconf|
                         vb.customize ['storageattach', :id,  '--storagectl', 'SATA', '--port', dconf[:port], '--device', 0, '--type', 'hdd', '--medium', dconf[:dfile]]
                     end
                  end
          end
 	  box.vm.provision "shell", inline: <<-SHELL
              setenforce 0
              mkdir -p ~root/.ssh
              cp ~vagrant/.ssh/auth* ~root/.ssh
              yum install epel-release -y
<<<<<<< HEAD
              yum install spawn-fcgi httpd monit -y
              echo 
              echo 1st task. Monitor systemlog with monit
              cp /vagrant/monit.log /etc/monit.d/test
              systemctl start monit  
=======
              yum install spawn-fcgi httpd -y
>>>>>>> 70f6e7c6b9176d04ddca3b561e83ae2bf92018ce
              echo 
              echo 2nd task. httpd with different configs.
              cp /vagrant/httpd@.service /etc/systemd/system/httpd@.service
              cp /etc/sysconfig/httpd /etc/sysconfig/httpd2
              systemctl daemon-reload
              echo Start httpd with first config.
              systemctl start httpd@httpd
              echo Start httpd with second config. It wont start, because configs are the same
              systemctl start httpd@httpd2                              
              echo 
              echo 3rd task. fast cgi systemd. It starts, but fails after because of incorrect options.   
              cp /vagrant/spawn-fcgi.service /etc/systemd/system/spawn-fcgi.service
              sed -i 's/^#SOCKET/SOCKET/g' /etc/sysconfig/spawn-fcgi
              sed -i 's/^#OPTION/OPTION/g' /etc/sysconfig/spawn-fcgi
              systemctl daemon-reload
              systemctl start spawn-fcgi
              systemctl status spawn-fcgi
  	  SHELL
      end
  end
end